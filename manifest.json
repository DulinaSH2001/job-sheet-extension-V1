{
  "manifest_version": 3,
  "name": "ERP Work Time Pro",
  "version": "1.0",
  "description": "Modern work time tracking with smart break management and job sheet integration. Developed by Dulina.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "history",
    "bookmarks",
    "downloads",
    "management",
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage",
    "fileSystem",
    "geolocation",
    "identity",
    "contextMenus",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alarm.html"],
      "matches": ["<all_urls>"]
    }
  ]
}